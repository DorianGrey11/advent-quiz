---
import Layout from '@layouts/Default.astro';
import {Card} from "@eliancodes/brutal-ui";
---

<Layout
        title='3. Frage'
        description='Wer gehörte zu den 4 Frauen, die neben 61 Männern ab September 1948 das Grundgesetz erarbeiteten?'
        classList='bg-red'
>
    <main class='bg-pink p-6'>
        <section id='question' class='gap-8 mt-4'>
            <div>
                <Card>
                    <div class='flex flex-col justify-between items-start gap-4'>
                        <h1 class='mt-4 mb-6 outfit text-5xl lg:text-7xl'>
                            Wer gehörte zu den 4 Frauen, die neben 61 Männern ab September 1948 das Grundgesetz erarbeiteten?
                        </h1>
                    </div>
                </Card>
            </div>
        </section>
        <section id='answers' class='grid md:grid-cols-4 xl:grid-cols-8 gap-4 lg:gap-8 mt-16 md:mt-6'>
            <div class='col-span-2'>
                <a href="/solution/3?clicked=a">
                    <Card>
                        <p class='text-lg md:text-xl lg:text-3xl md:mb-4 dm-serif'>
                            Elisabeth Selbert
                        </p>
                    </Card>
                </a>
            </div>
            <div class='col-span-2'>
                <a href="/solution/3?clicked=b">
                    <Card>
                        <p class='text-lg md:text-xl lg:text-3xl md:mb-4 dm-serif'>
                            Helene Weber
                        </p>
                    </Card>
                </a>
            </div>
            <div class='col-span-2'>
                <a href="/solution/3?clicked=c">
                    <Card>
                        <p class='text-lg md:text-xl lg:text-3xl md:mb-4 dm-serif'>
                            Helene Wessel
                        </p>
                    </Card>
                </a>
            </div>
            <div class='col-span-2'>
                <a href="/solution/3?clicked=d">
                    <Card>
                        <p class='text-lg md:text-xl lg:text-3xl md:mb-4 dm-serif'>
                            Frieda Nadig
                        </p>
                    </Card>
                </a>
            </div>
        </section>
    </main>
</Layout>
