---
import Layout from '@layouts/Default.astro';
import {Pill} from '@eliancodes/brutal-ui';
import {Button} from '@eliancodes/brutal-ui';
import {Card} from '@eliancodes/brutal-ui';
import imgVLabel from 'src/assets/v-label.webp'
---

<Layout
        title='Home'
        description='Adventsquiz'
        classList='bg-red'
>
    <script data-astro-rerun>localStorage.removeItem('quizResults');</script>
    <main class='bg-pink p-6'>
        <section id='about' class='grid md:grid-cols-8 gap-8 mt-4'>
            <h2 class='hidden'>About Brutal</h2>
            <div class='col-span-4'>
                <Card>
                    <div class='flex flex-col justify-between items-start gap-4'>
                        <p class='mt-4 outfit text-2xl md:text-5xl lg:text-7xl'>
                            Adventsquiz
                        </p>
                        <p class='mt-2 outfit text-xl md:text-3xl lg:text-5xl'>
                            für hoffentlich etwas Spaß und Lernen
                        </p>
                        <div class='flex gap-4 flex-wrap'>
                            <Button target={'_self'} href='/question/1'>
                                Das Adventsquiz beginnen &rarr;
                            </Button>
                            <Button target={'_self'} href='/en/question/1'>
                                Check out the Quiz in English &rarr;
                            </Button>
                        </div>
                    </div>
                </Card>
            </div>
            <div class='col-span-2'>
                <Card>
                    <h2 class='text-2xl md:text-4xl lg:text-6xl mb-8 dm-serif'>
                        Zutaten der Marzipan-happen
                    </h2>
                    <ul class='flex gap-4 flex-wrap'>
                        <li>
                            <Pill>Zucker</Pill>
                        </li>
                        <li>
                            <Pill>Mandeln</Pill>
                        </li>
                        <li>
                            <Pill>Kakaomasse</Pill>
                        </li>
                        <li>
                            <Pill>Wasser</Pill>
                        </li>
                        <li>
                            <Pill>Kakaobutter</Pill>
                        </li>
                        <li>
                            <Pill>Emulgator: Lecithine (Soja)</Pill>
                        </li>
                        <li>
                            <Pill>Feuchthaltemittel: Invertase</Pill>
                        </li>
                        <li>
                            <img src={imgVLabel.src} alt="The V-Label to mark a vegan product"/>
                        </li>
                        <li>
                            Kann Haselnüsse, Walnüsse, Pistazien, Weizen, Gerste, Milchereugnisse und Ei enthalten.
                        </li>
                    </ul>
                </Card>
            </div>
        </section>
    </main>
</Layout>
